@model Hiring
@{
    ViewData["Title"] = "Apply for Job";
}

<h2>Apply for @ViewBag.ServiceTitle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post" asp-controller="Career" asp-action="Apply">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VacancyId" value="@ViewBag.VacancyId" />

    <div class="form-group">
        <label asp-for="Name">Full Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact">Phone Number</label>
        <input asp-for="Contact" class="form-control" required />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="QualificationId">Highest Qualification</label>
        <select asp-for="QualificationId" asp-items="ViewBag.Qualifications" class="form-control">
            <option value="">-- Select Qualification --</option>
        </select>
        <span asp-validation-for="QualificationId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit Application</button>
    <a href="/careers" class="btn btn-secondary mt-3">Cancel</a>
</form>