@model Service
@{
    ViewData["Title"] = "Edit Service";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-3xl mx-auto">

        <div class="text-center mb-12">
            <h1 class="text-5xl font-anton uppercase tracking-tight text-yellow-600">Edit Service</h1>
            <p class="text-gray-400 mt-2">Update your service details</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 p-4 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300">
                <ul class="list-disc list-inside">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post" asp-controller="Service" asp-action="Edit" class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-4">
                <label asp-for="Title" class="block mb-2 font-semibold text-gray-300"></label>
                <input asp-for="Title" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500" required />
                <span asp-validation-for="Title" class="text-red-400 text-sm mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="block mb-2 font-semibold text-gray-300"></label>
                <textarea asp-for="Description" rows="4" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"></textarea>
            </div>

            <div class="flex gap-4 mt-6">
                <button type="submit" class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 rounded-xl font-bold uppercase text-sm">
                    Update
                </button>
                <a asp-action="Index" class="px-6 py-3 bg-gray-700 hover:bg-gray-800 rounded-xl font-bold uppercase text-sm">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</section>
