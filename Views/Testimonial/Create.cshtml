@model Testimonial
@{
    ViewData["Title"] = "Add Testimonial";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-3xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl lg:text-6xl font-anton uppercase tracking-tight text-yellow-600">
                Add <span class="text-white">Testimonial</span>
            </h1>
            <p class="text-gray-400 mt-4">
                Enter client feedback and rating
            </p>
        </div>

        <!-- Alerts -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 p-4 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300">
                <ul class="list-disc pl-5">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Form Container -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 rounded-[2.5rem] shadow-2xl">
            <form method="post" asp-controller="Testimonial" asp-action="Create">
                @Html.AntiForgeryToken()

                <!-- Client Select -->
                <div class="mb-6">
                    <label asp-for="ClientId" class="block text-gray-300 font-bold mb-2">Client</label>
                    <select asp-for="ClientId" asp-items="ViewBag.Clients"
                            class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" required>
                        <option value="">-- Select Client --</option>
                    </select>
                    <span asp-validation-for="ClientId" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <!-- Rating Select -->
                <div class="mb-6">
                    <label asp-for="Rating" class="block text-gray-300 font-bold mb-2">Rating (1-5)</label>
                    <select asp-for="Rating" class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" required>
                        <option value="5">5 - Excellent</option>
                        <option value="4">4 - Good</option>
                        <option value="3">3 - Average</option>
                        <option value="2">2 - Poor</option>
                        <option value="1">1 - Very Poor</option>
                    </select>
                </div>

                <!-- Content -->
                <div class="mb-6">
                    <label asp-for="Content" class="block text-gray-300 font-bold mb-2">Testimonial Text</label>
                    <textarea asp-for="Content" rows="5"
                              class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white resize-none" required></textarea>
                    <span asp-validation-for="Content" class="text-red-400 text-sm mt-1 block"></span>
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 justify-end">
                    <a asp-action="Index"
                       class="px-6 py-3 border border-white/10 rounded-xl text-gray-300 hover:bg-white/10 transition">
                        Cancel
                    </a>
                    <button type="submit"
                            class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 rounded-xl font-bold text-white transition">
                        Add Testimonial
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
