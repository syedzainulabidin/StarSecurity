@model Testimonial
@{
    ViewData["Title"] = "Add Testimonial";
}

<h2>Add Testimonial</h2>

<form method="post" asp-controller="Testimonial" asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="ClientId">Client</label>
        <select asp-for="ClientId" asp-items="ViewBag.Clients" class="form-control" required>
            <option value="">-- Select Client --</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating (1-5)</label>
        <select asp-for="Rating" class="form-control">
            <option value="5">5 - Excellent</option>
            <option value="4">4 - Good</option>
            <option value="3">3 - Average</option>
            <option value="2">2 - Poor</option>
            <option value="1">1 - Very Poor</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Content">Testimonial Text</label>
        <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Testimonial</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>