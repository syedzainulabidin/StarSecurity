@model List<Testimonial>
@{
    ViewData["Title"] = "Testimonials";
}

<h2>Client Testimonials</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<p><a asp-action="Create" class="btn btn-primary">Add New Testimonial</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Client</th>
            <th>Rating</th>
            <th>Content</th>
            <th>Posted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Client?.Booking?.ClientName</td>
                <td>@t.Rating / 5</td>
                <td>@t.Content</td>
                <td>@t.CreatedAt.ToString("dd-MM-yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" asp-action="Delete" asp-route-id="@t.Id" style="display:inline;" onsubmit="return confirm('Delete this testimonial?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>