@model List<Testimonial>
@{
    ViewData["Title"] = "Testimonials";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-7xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tight text-yellow-600">
                CLIENT <span class="text-white">TESTIMONIALS</span>
            </h1>
            <p class="text-gray-400 mt-4">
                View, manage, and respond to client feedback
            </p>
        </div>

        <!-- Alerts -->
        @if (TempData["Message"] != null)
        {
            <div class="mb-6 p-4 bg-blue-900/30 border border-blue-500/30 rounded-xl text-blue-300">
                @TempData["Message"]
            </div>
        }

        <!-- Controls -->
        <div class="mb-6 flex flex-col md:flex-row gap-4 justify-between">
            <input id="searchInput"
                   placeholder="Search testimonials..."
                   class="w-full md:w-1/3 bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" />

            <select id="ratingFilter"
                    class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                <option value="all">All Ratings</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i Stars</option>
                }
            </select>

            <a asp-action="Create"
               class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-bold uppercase text-sm text-center">
                + Add New Testimonial
            </a>
        </div>

        <!-- Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-500 uppercase tracking-widest text-xs">
                        <th class="px-6 py-4">Client</th>
                        <th class="px-6 py-4">Rating</th>
                        <th class="px-6 py-4">Content</th>
                        <th class="px-6 py-4">Posted On</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="testimonialTable" class="divide-y divide-white/10">
                    @foreach (var t in Model)
                    {
                        <tr class="testimonial-row hover:bg-white/5 transition cursor-pointer"
                            data-client="@t.Client?.Booking?.ClientName"
                            data-rating="@t.Rating"
                            data-content="@t.Content"
                            data-created="@t.CreatedAt.ToString("dd-MM-yyyy")"
                            onclick="openTestimonialModal(this)">
                            <td class="px-6 py-5 font-bold">@t.Client?.Booking?.ClientName</td>
                            <td class="px-6 py-5">@t.Rating / 5</td>
                            <td class="px-6 py-5">@t.Content</td>
                            <td class="px-6 py-5">@t.CreatedAt.ToString("dd-MM-yyyy")</td>
                            <td class="px-6 py-5 text-right">
                                <div class="flex justify-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@t.Id"
                                       class="px-4 py-2 bg-yellow-900/30 border border-yellow-500/30 rounded-xl text-yellow-300 text-sm font-bold uppercase">
                                        Edit
                                    </a>
                                    <button type="button"
                                            onclick="openDeleteModal(@t.Id)"
                                            class="px-4 py-2 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300 text-sm font-bold uppercase">
                                        Delete
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Footer -->
            <div class="mt-6 flex justify-between items-center">
                <div id="recordCount" class="text-sm text-gray-400"></div>
                <div id="paginationControls" class="flex gap-2"></div>
            </div>
        </div>
    </div>
</section>

<!-- DELETE CONFIRM MODAL -->
<div id="deleteModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeDeleteModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-md p-6">
            <h3 class="text-2xl font-anton uppercase mb-4 text-red-400">Confirm Delete</h3>
            <p class="text-gray-300 mb-6">Are you sure you want to delete this testimonial? This action cannot be undone.</p>

            <div class="flex justify-end gap-4">
                <button onclick="closeDeleteModal()"
                        class="px-6 py-2 border border-white/10 rounded-xl text-gray-300 hover:bg-white/10">
                    Cancel
                </button>
                <form id="deleteForm" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="px-6 py-2 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300 font-bold uppercase">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- TESTIMONIAL MODAL -->
<div id="testimonialModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeTestimonialModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-lg p-6">
            <h3 class="text-3xl font-anton uppercase mb-2 text-yellow-400" id="modalClient"></h3>
            <p class="text-gray-400 mb-2">Rating: <span id="modalRating"></span> / 5</p>
            <p class="text-gray-300 leading-relaxed" id="modalContent"></p>
            <p class="text-gray-500 mt-2" id="modalCreated"></p>

            <div class="mt-8 flex justify-end">
                <button onclick="closeTestimonialModal()" class="px-6 py-2 border border-white/10 rounded-xl">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const rowsPerPage = 5;
    let searchValue = '';
    let ratingFilter = 'all';

    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchInput').addEventListener('input', e => {
            searchValue = e.target.value.toLowerCase();
            currentPage = 1;
            updateTable();
        });

        document.getElementById('ratingFilter').addEventListener('change', e => {
            ratingFilter = e.target.value;
            currentPage = 1;
            updateTable();
        });

        updateTable();
    });

    function updateTable() {
        const rows = Array.from(document.querySelectorAll('.testimonial-row'));
        const filtered = rows.filter(r => {
            const matchesSearch = r.dataset.client.toLowerCase().includes(searchValue) ||
                                  r.dataset.content.toLowerCase().includes(searchValue);
            const matchesRating = ratingFilter === 'all' || r.dataset.rating === ratingFilter;
            return matchesSearch && matchesRating;
        });

        rows.forEach(r => r.style.display = 'none');

        filtered.slice((currentPage - 1) * rowsPerPage, currentPage * rowsPerPage)
                .forEach(r => r.style.display = '');

        document.getElementById('recordCount').textContent =
            `Showing ${filtered.length} testimonials`;

        buildPagination(filtered.length);
    }

    function buildPagination(total) {
        const pages = Math.ceil(total / rowsPerPage);
        const container = document.getElementById('paginationControls');
        container.innerHTML = '';

        for (let i = 1; i <= pages; i++) {
            container.innerHTML += `<button onclick="changePage(${i})"
                class="px-3 py-1 rounded-lg ${i === currentPage ? 'bg-yellow-600' : 'bg-white/10'}">
                ${i}
            </button>`;
        }
    }

    function changePage(p) {
        currentPage = p;
        updateTable();
    }

    function openTestimonialModal(row) {
        document.getElementById('modalClient').textContent = row.dataset.client;
        document.getElementById('modalRating').textContent = row.dataset.rating;
        document.getElementById('modalContent').textContent = row.dataset.content;
        document.getElementById('modalCreated').textContent = "Posted on: " + row.dataset.created;
        document.getElementById('testimonialModal').classList.remove('hidden');
    }

    function closeTestimonialModal() {
        document.getElementById('testimonialModal').classList.add('hidden');
    }

        function openDeleteModal(id) {
        const form = document.getElementById('deleteForm');
        form.action = `/Testimonial/Delete/${id}`; // Update with correct route
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }

</script>
