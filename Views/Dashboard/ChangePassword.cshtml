@{
    ViewData["Title"] = "Change Password";
    Layout = "_Employee_Dashboard_Layout";
}

<section class="py-12 px-8 lg:px-16">
    <div class="max-w-2xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-5xl font-anton uppercase tracking-tight text-yellow-600">
                Change <span class="text-white">Password</span>
            </h1>
            <p class="text-gray-400 mt-3">Update your account password for security</p>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="mb-4 p-4 bg-green-600 text-white rounded-xl shadow">
                @TempData["Message"]
            </div>
        }

        <form method="post" asp-controller="Dashboard" asp-action="ChangePassword" class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 rounded-2xl shadow-2xl">
            @Html.AntiForgeryToken()

            <div class="mb-4">
                <label class="block text-gray-300 mb-2">Current Password</label>
                <input type="password" name="currentPassword" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-600" required />
                <span class="text-red-500 text-sm">@Html.ValidationMessage("currentPassword")</span>
            </div>

            <div class="mb-4">
                <label class="block text-gray-300 mb-2">New Password</label>
                <input type="password" name="newPassword" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-600" required />
                <span class="text-red-500 text-sm">@Html.ValidationMessage("newPassword")</span>
            </div>

            <div class="mb-6">
                <label class="block text-gray-300 mb-2">Confirm New Password</label>
                <input type="password" name="confirmPassword" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-600" required />
                <span class="text-red-500 text-sm">@Html.ValidationMessage("confirmPassword")</span>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="px-6 py-3 bg-yellow-600 text-black font-semibold rounded-xl hover:bg-yellow-700 transition">Change Password</button>
                <a href="/dashboard/profile" class="px-6 py-3 bg-gray-700 text-white rounded-xl hover:bg-gray-800 transition">Cancel</a>
            </div>
        </form>

    </div>
</section>
