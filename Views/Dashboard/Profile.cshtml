@using System.Security.Claims
@model Employee
@{
    ViewData["Title"] = "My Profile";
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<h2>My Profile</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post" asp-controller="Dashboard" asp-action="UpdateProfile">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
        <small class="text-muted">Email cannot be changed.</small>
    </div>

    <div class="form-group">
        <label asp-for="Contact"></label>
        <input asp-for="Contact" class="form-control" required />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="QualificationId">Qualification</label>
        <select asp-for="QualificationId" asp-items="ViewBag.Qualifications" class="form-control">
            <option value="">-- Select --</option>
        </select>
    </div>

    <!-- Only admin can edit Service and Grade -->
    @if (role == "admin")
    {
        <div class="form-group">
            <label asp-for="ServiceId">Service/Department</label>
            <select asp-for="ServiceId" asp-items="ViewBag.Services" class="form-control">
                <option value="">-- Select --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Grade">Grade</label>
            <input asp-for="Grade" class="form-control" />
        </div>
    }
    else
    {
        <!-- Display Service and Grade as read-only for staff -->
        <div class="form-group">
            <label>Service/Department</label>
            <input class="form-control" value="@Model.Service?.Title" readonly />
        </div>

        <div class="form-group">
            <label>Grade</label>
            <input class="form-control" value="@Model.Grade" readonly />
        </div>
    }

    <button type="submit" class="btn btn-warning mt-3">Update Profile</button>
    <a href="/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</form>