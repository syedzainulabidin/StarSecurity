@model List<Employee>
@{
    ViewData["Title"] = "Colleagues";
    Layout = "_Employee_Dashboard_Layout";
}

<section class="relative py-12 px-8 lg:px-16 overflow-hidden">
    <div class="relative z-10 max-w-7xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-5xl font-anton uppercase tracking-tight text-yellow-600">
                My <span class="text-white">Colleagues</span>
            </h1>
            <p class="text-gray-400 mt-3">View details of your colleagues in the company</p>
        </div>

        <!-- Search & Filters -->
        <div class="mb-6 flex flex-col md:flex-row gap-4 justify-between">
            <input id="searchInput"
                   placeholder="Search by name, service, or grade..."
                   class="w-full md:w-1/3 bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" />

            <select id="serviceFilter"
                    class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                <option value="all">All Services</option>
                @foreach (var s in Model.Select(e => e.Service?.Title).Distinct())
                {
                    if (!string.IsNullOrEmpty(s))
                    {
                        <option value="@s">@s</option>
                    }
                }
            </select>

            <select id="gradeFilter"
                    class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                <option value="all">All Grades</option>
                @foreach (var g in Model.Select(e => e.Grade).Distinct())
                {
                    if (!string.IsNullOrEmpty(g))
                    {
                        <option value="@g">@g</option>
                    }
                }
            </select>
        </div>

        <!-- Colleagues Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-500 uppercase tracking-widest text-xs">
                        <th class="px-6 py-4">Name</th>
                        <th class="px-6 py-4">Email</th>
                        <th class="px-6 py-4">Contact</th>
                        <th class="px-6 py-4">Service</th>
                        <th class="px-6 py-4">Grade</th>
                    </tr>
                </thead>
                <tbody id="employeeTable" class="divide-y divide-white/10">
                    @foreach (var emp in Model)
                    {
                        <tr class="employee-row hover:bg-white/5 transition cursor-pointer"
                            data-name="@emp.Name"
                            data-email="@emp.Email"
                            data-contact="@emp.Contact"
                            data-service="@emp.Service?.Title"
                            data-grade="@emp.Grade"
                            onclick="openEmployeeModal(this)">
                            <td class="px-6 py-4 font-bold">@emp.Name</td>
                            <td class="px-6 py-4">@emp.Email</td>
                            <td class="px-6 py-4">@emp.Contact</td>
                            <td class="px-6 py-4">@emp.Service?.Title</td>
                            <td class="px-6 py-4">@emp.Grade</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination & Records -->
            <div class="mt-6 flex justify-between items-center">
                <div id="recordCount" class="text-sm text-gray-400"></div>
                <div id="paginationControls" class="flex gap-2"></div>
            </div>
        </div>

        <a href="/dashboard" class="mt-6 inline-block px-6 py-3 bg-gray-700 text-white rounded-xl hover:bg-gray-800">Back to Dashboard</a>
    </div>
</section>

<!-- Employee Modal -->
<div id="employeeModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeEmployeeModal()"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-md p-6">
            <h3 class="text-3xl font-anton uppercase mb-2 text-yellow-400" id="modalName"></h3>
            <p class="text-gray-400 mb-1"><strong>Email:</strong> <span id="modalEmail"></span></p>
            <p class="text-gray-400 mb-1"><strong>Contact:</strong> <span id="modalContact"></span></p>
            <p class="text-gray-400 mb-1"><strong>Service:</strong> <span id="modalService"></span></p>
            <p class="text-gray-400 mb-1"><strong>Grade:</strong> <span id="modalGrade"></span></p>
            <div class="mt-6 flex justify-end">
                <button onclick="closeEmployeeModal()" class="px-6 py-2 border border-white/10 rounded-xl">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const rowsPerPage = 5;
    let searchValue = '';
    let serviceFilter = 'all';
    let gradeFilter = 'all';

    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchInput').addEventListener('input', e => {
            searchValue = e.target.value.toLowerCase();
            currentPage = 1;
            updateTable();
        });

        document.getElementById('serviceFilter').addEventListener('change', e => {
            serviceFilter = e.target.value;
            currentPage = 1;
            updateTable();
        });

        document.getElementById('gradeFilter').addEventListener('change', e => {
            gradeFilter = e.target.value;
            currentPage = 1;
            updateTable();
        });

        updateTable();
    });

    function updateTable() {
        const rows = Array.from(document.querySelectorAll('.employee-row'));
        const filtered = rows.filter(r => {
            const matchesSearch = r.dataset.name.toLowerCase().includes(searchValue) ||
                                  r.dataset.email.toLowerCase().includes(searchValue);
            const matchesService = serviceFilter === 'all' || r.dataset.service === serviceFilter;
            const matchesGrade = gradeFilter === 'all' || r.dataset.grade === gradeFilter;
            return matchesSearch && matchesService && matchesGrade;
        });

        rows.forEach(r => r.style.display = 'none');
        filtered.slice((currentPage - 1) * rowsPerPage, currentPage * rowsPerPage)
                .forEach(r => r.style.display = '');

        document.getElementById('recordCount').textContent =
            `Showing ${filtered.length} employees`;

        buildPagination(filtered.length);
    }

    function buildPagination(total) {
        const pages = Math.ceil(total / rowsPerPage);
        const container = document.getElementById('paginationControls');
        container.innerHTML = '';
        for (let i = 1; i <= pages; i++) {
            container.innerHTML += `<button onclick="changePage(${i})"
                class="px-3 py-1 rounded-lg ${i === currentPage ? 'bg-yellow-600' : 'bg-white/10'}">
                ${i}
            </button>`;
        }
    }

    function changePage(p) {
        currentPage = p;
        updateTable();
    }

    function openEmployeeModal(row) {
        document.getElementById('modalName').textContent = row.dataset.name;
        document.getElementById('modalEmail').textContent = row.dataset.email;
        document.getElementById('modalContact').textContent = row.dataset.contact;
        document.getElementById('modalService').textContent = row.dataset.service;
        document.getElementById('modalGrade').textContent = row.dataset.grade;
        document.getElementById('employeeModal').classList.remove('hidden');
    }

    function closeEmployeeModal() {
        document.getElementById('employeeModal').classList.add('hidden');
    }
</script>
