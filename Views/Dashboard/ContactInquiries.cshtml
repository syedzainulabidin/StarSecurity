@model List<Contact>
@{
    ViewData["Title"] = "Contact Inquiries";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-7xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tight text-yellow-600">
                CONTACT <span class="text-white">INQUIRIES</span>
            </h1>
            <p class="text-gray-400 mt-4">
                View and manage messages sent by clients
            </p>
        </div>

        <!-- Controls -->
        <div class="mb-6 flex flex-col md:flex-row gap-4 justify-between">
            <input id="searchInput"
                   placeholder="Search inquiries..."
                   class="w-full md:w-1/3 bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" />
        </div>

        <!-- Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-500 uppercase tracking-widest text-xs">
                        <th class="px-6 py-4">Name</th>
                        <th class="px-6 py-4">Email</th>
                        <th class="px-6 py-4">Date</th>
                        <th class="px-6 py-4">Message Preview</th>
                    </tr>
                </thead>
                <tbody id="contactTable" class="divide-y divide-white/10">
                    @foreach (var inquiry in Model)
                    {
                        <tr class="contact-row hover:bg-white/5 transition cursor-pointer"
                            data-name="@inquiry.Name"
                            data-email="@inquiry.Email"
                            data-date="@inquiry.CreatedAt.ToString("dd-MM-yyyy HH:mm")"
                            data-message="@inquiry.Message"
                            onclick="openContactModal(this)">
                            <td class="px-6 py-5 font-bold">@inquiry.Name</td>
                            <td class="px-6 py-5">@inquiry.Email</td>
                            <td class="px-6 py-5">@inquiry.CreatedAt.ToString("dd-MM-yyyy")</td>
                            <td class="px-6 py-5">
                                @(inquiry.Message.Length > 50 ? inquiry.Message.Substring(0, 50) + "..." : inquiry.Message)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Footer -->
            <div class="mt-6 flex justify-between items-center">
                <div id="recordCount" class="text-sm text-gray-400"></div>
                <div id="paginationControls" class="flex gap-2"></div>
            </div>
        </div>
    </div>
</section>

<!-- CONTACT MODAL -->
<div id="contactModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeContactModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-lg p-6">
            <h3 class="text-2xl font-anton uppercase mb-2 text-yellow-400" id="modalName"></h3>
            <p class="text-gray-400 mb-2"><strong>Email:</strong> <span id="modalEmail"></span></p>
            <p class="text-gray-400 mb-2"><strong>Date:</strong> <span id="modalDate"></span></p>
            <hr class="border-white/10 my-2" />
            <p class="text-gray-300 leading-relaxed"><strong>Message:</strong></p>
            <p class="text-gray-200 border border-white/10 rounded-xl p-4 mt-1" id="modalMessage"></p>

            <div class="mt-6 text-right">
                <button onclick="closeContactModal()" class="px-6 py-2 border border-white/10 rounded-xl">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const rowsPerPage = 5;
    let searchValue = '';

    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchInput').addEventListener('input', e => {
            searchValue = e.target.value.toLowerCase();
            currentPage = 1;
            updateTable();
        });
        updateTable();
    });

    function updateTable() {
        const rows = Array.from(document.querySelectorAll('.contact-row'));
        const filtered = rows.filter(r => {
            return r.dataset.name.toLowerCase().includes(searchValue) ||
                   r.dataset.email.toLowerCase().includes(searchValue) ||
                   r.dataset.message.toLowerCase().includes(searchValue);
        });

        rows.forEach(r => r.style.display = 'none');
        filtered.slice((currentPage-1)*rowsPerPage, currentPage*rowsPerPage).forEach(r => r.style.display = '');

        document.getElementById('recordCount').textContent =
            `Showing ${filtered.length} inquiries`;

        buildPagination(filtered.length);
    }

    function buildPagination(total) {
        const pages = Math.ceil(total / rowsPerPage);
        const container = document.getElementById('paginationControls');
        container.innerHTML = '';

        for (let i=1; i<=pages; i++) {
            container.innerHTML += `<button onclick="changePage(${i})"
                class="px-3 py-1 rounded-lg ${i===currentPage?'bg-yellow-600':'bg-white/10'}">${i}</button>`;
        }
    }

    function changePage(p) {
        currentPage = p;
        updateTable();
    }

    function openContactModal(row) {
        document.getElementById('modalName').textContent = row.dataset.name;
        document.getElementById('modalEmail').textContent = row.dataset.email;
        document.getElementById('modalDate').textContent = row.dataset.date;
        document.getElementById('modalMessage').textContent = row.dataset.message;
        document.getElementById('contactModal').classList.remove('hidden');
    }

    function closeContactModal() {
        document.getElementById('contactModal').classList.add('hidden');
    }
</script>
