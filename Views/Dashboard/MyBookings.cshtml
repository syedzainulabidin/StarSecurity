@model List<Booking>
@{
    ViewData["Title"] = "My Assigned Bookings";
}

<h2>My Assigned Bookings</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Service</th>
                <th>Date</th>
                <th>Shift</th>
                <th>Address</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.ClientName</td>
                    <td>@booking.Service?.Title</td>
                    <td>@booking.Date.ToShortDateString()</td>
                    <td>@booking.ShiftStart - @booking.ShiftEnd</td>
                    <td>@booking.Address</td>
                    <td>
                        @if (booking.Status == "Approved")
                        {
                            <span class="badge bg-success">Assigned</span>
                        }
                        else if (booking.Status == "Completed")
                        {
                            <span class="badge bg-info">Completed</span>
                        }
                    </td>
                    <td>
                        @if (booking.Status == "Approved")
                        {
                            <form method="post" asp-action="CompleteBooking" asp-route-id="@booking.Id" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-success">Mark Completed</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">—</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no assigned bookings.</p>
}

<a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>