@model List<Employee>
@{
    ViewData["Title"] = "Manage Employees";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-7xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tight">
                EMPLOYEE <span class="text-blue-600">MANAGEMENT</span>
            </h1>
            <p class="text-gray-400 mt-4">
                Search, filter, and manage employees
            </p>
        </div>

        <!-- Controls -->
        <div class="mb-6 flex flex-col lg:flex-row gap-4 justify-between">

            <input id="searchInput"
                   placeholder="Search employees..."
                   class="w-full lg:w-1/3 bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" />

            <select id="roleFilter"
                    class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                <option value="all">All Roles</option>
                @foreach (var role in Model.Select(e => e.Role).Distinct())
                {
                    <option value="@role">@role</option>
                }
            </select>

            <select id="serviceFilter"
                    class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                <option value="all">All Services</option>
                @foreach (var service in Model
                                .Where(e => e.Service != null)
                                .Select(e => e.Service.Title)
                                .Distinct())
                {
                    <option value="@service">@service</option>
                }
            </select>

            <a asp-action="Create"
               class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-bold uppercase text-sm">
                + Add Employee
            </a>
        </div>

        <!-- Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="text-gray-500 uppercase tracking-widest text-xs">
                            <th class="px-6 py-4">Name</th>
                            <th class="px-6 py-4">Email</th>
                            <th class="px-6 py-4">Contact</th>
                            <th class="px-6 py-4">Service</th>
                            <th class="px-6 py-4">Role</th>
                            <th class="px-6 py-4 text-right">Actions</th>
                        </tr>
                    </thead>

                    <tbody id="employeeTable" class="divide-y divide-white/10">
                        @foreach (var emp in Model)
                        {
                            <tr class="employee-row hover:bg-white/5 transition"
                                data-id="@emp.Id"
                                data-role="@emp.Role"
                                data-service="@emp.Service?.Title">
                                <td class="px-6 py-5 font-bold">@emp.Name</td>
                                <td class="px-6 py-5 text-blue-400">@emp.Email</td>
                                <td class="px-6 py-5">@emp.Contact</td>
                                <td class="px-6 py-5">@emp.Service?.Title</td>
                                <td class="px-6 py-5">
                                    <span class="px-3 py-1 rounded-full bg-gray-800 text-xs uppercase">
                                        @emp.Role
                                    </span>
                                </td>
                                <td class="px-6 py-5 text-right">
                                    <div class="flex justify-end gap-2">
                                        <a href="/dashboard/employees/edit/@emp.Id"
                                           class="px-4 py-2 bg-yellow-900/30 border border-yellow-500/30
                                                      rounded-xl text-yellow-300 text-sm font-bold uppercase">
                                            Edit
                                        </a>
                                        <button onclick="openDeleteModal(@emp.Id, '@emp.Name')"
                                                class="px-4 py-2 bg-red-900/30 border border-red-500/30
                                                           rounded-xl text-red-300 text-sm font-bold uppercase">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="mt-6 flex justify-between items-center">
                <div id="recordCount" class="text-sm text-gray-400"></div>
                <div id="paginationControls" class="flex gap-2"></div>
            </div>
        </div>
    </div>
</section>

<!-- DELETE MODAL -->
<div id="deleteModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeDeleteModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-md p-6">
            <h3 class="text-2xl font-anton uppercase mb-4 text-red-400">
                Confirm Deletion
            </h3>

            <p class="text-gray-300 mb-6">
                Are you sure you want to delete
                <strong id="deleteEmployeeName"></strong>?
            </p>

            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="flex justify-end gap-3">
                    <button type="button"
                            onclick="closeDeleteModal()"
                            class="px-5 py-2 border border-white/10 rounded-xl">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-5 py-2 bg-red-900/40 border border-red-500/40
                                   rounded-xl text-red-300 font-bold uppercase">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    let rowsPerPage = 5;
    let searchValue = '';
    let roleFilter = 'all';
    let serviceFilter = 'all';

    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchInput').addEventListener('input', e => {
            searchValue = e.target.value.toLowerCase();
            currentPage = 1;
            updateTable();
        });

        document.getElementById('roleFilter').addEventListener('change', e => {
            roleFilter = e.target.value;
            currentPage = 1;
            updateTable();
        });

        document.getElementById('serviceFilter').addEventListener('change', e => {
            serviceFilter = e.target.value;
            currentPage = 1;
            updateTable();
        });

        updateTable();
    });

    function updateTable() {
        const rows = Array.from(document.querySelectorAll('.employee-row'));

        const filtered = rows.filter(r => {
            const matchesSearch = r.textContent.toLowerCase().includes(searchValue);
            const matchesRole = roleFilter === 'all' || r.dataset.role === roleFilter;
            const matchesService = serviceFilter === 'all' || r.dataset.service === serviceFilter;
            return matchesSearch && matchesRole && matchesService;
        });

        rows.forEach(r => r.style.display = 'none');

        const start = (currentPage - 1) * rowsPerPage;
        filtered.slice(start, start + rowsPerPage)
            .forEach(r => r.style.display = '');

        document.getElementById('recordCount').textContent =
            `Showing ${filtered.length} employees`;

        buildPagination(filtered.length);
    }

    function buildPagination(total) {
        const pages = Math.ceil(total / rowsPerPage);
        const container = document.getElementById('paginationControls');
        container.innerHTML = '';

        for (let i = 1; i <= pages; i++) {
            container.innerHTML += `
                <button onclick="changePage(${i})"
                        class="px-3 py-1 rounded-lg ${i === currentPage ? 'bg-blue-600' : 'bg-white/10'}">
                    ${i}
                </button>`;
        }
    }

    function changePage(p) {
        currentPage = p;
        updateTable();
    }

    function openDeleteModal(id, name) {
        document.getElementById('deleteEmployeeName').textContent = name;
        document.getElementById('deleteForm').action =
            `/dashboard/employees/delete/${id}`;
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>

<style>
    .text-stroke {
        -webkit-text-stroke: 1px rgba(255,255,255,.3);
    }
</style>
