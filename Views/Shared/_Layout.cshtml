<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarSecurity</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarSecurity.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Star Security</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Public Links -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/careers">Careers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/request-security">Request Security</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/apply-now">Apply for Job</a>
                        </li>

                        <!-- Employee Links -->
                        @if (Context.Session.GetString("UserRole") == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/dashboard/employee">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/dashboard/my-bookings">My Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/dashboard/colleagues">Colleagues</a>
                            </li>
                        }

                        <!-- Admin Links -->
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" href="/dashboard/users">Users</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/employees">Employees</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/services">Services</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/bookings">Bookings</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/requests">Requests</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/applications">Job Applications</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/vacancies">Vacancies</a></li>
                                    <li><a class="dropdown-item" href="/dashboard/blacklist">Blacklist</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Login/Logout -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserEmail") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @Context.Session.GetString("UserName")!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StarSecurity
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>