<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarSecurity</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarSecurity.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Star Security</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Public Links -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Vacancies">Careers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Requests" asp-action="Create">Request Security</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Hirings" asp-action="Create">Apply for Job</a>
                        </li>

                        <!-- Employee Links -->
                        @if (Context.Session.GetString("UserRole") == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="EmployeeDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="MyBookings">My Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employee" asp-action="ViewColleagues">Colleagues</a>
                            </li>
                        }

                        <!-- Admin Links -->
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">Employees</a></li>
                                    <li><a class="dropdown-item" asp-controller="Services" asp-action="Index">Services</a></li>
                                    <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index">Bookings</a></li>
                                    <li><a class="dropdown-item" asp-controller="Requests" asp-action="Index">Requests</a></li>
                                    <li><a class="dropdown-item" asp-controller="Hirings" asp-action="Index">Job Applications</a></li>
                                    <li><a class="dropdown-item" asp-controller="Vacancies" asp-action="Index">Vacancies</a></li>
                                    <li><a class="dropdown-item" asp-controller="BlackLists" asp-action="Index">Blacklist</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Login/Logout -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserEmail") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @Context.Session.GetString("UserName")!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - StarSecurity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
