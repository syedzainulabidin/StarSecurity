@model StarSecurity.Models.Qualification

@{
    ViewData["Title"] = "Edit Qualification";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-md mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-anton uppercase tracking-tight text-yellow-600">
                EDIT QUALIFICATION
            </h1>
        </div>

        <!-- Alerts -->
        @if (TempData["Message"] != null)
        {
            <div class="mb-6 p-4 bg-blue-900/30 border border-blue-500/30 rounded-xl text-blue-300">
                @TempData["Message"]
            </div>
        }

        <!-- Form Card -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 rounded-[2.5rem] shadow-2xl">
            <form method="post">
                @Html.AntiForgeryToken()

                <div class="mb-6">
                    <label asp-for="Degree" class="block mb-2 text-gray-300 font-semibold">Degree</label>
                    <input asp-for="Degree" class="w-full px-4 py-3 rounded-xl bg-black/40 border border-white/10 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500" />
                    <span asp-validation-for="Degree" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div class="flex justify-end gap-4">
                    <a href="/dashboard/qualification" class="px-6 py-3 border border-white/10 rounded-xl text-gray-300 hover:bg-white/5 font-bold uppercase">
                        Back
                    </a>
                    <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-bold uppercase">
                        Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
