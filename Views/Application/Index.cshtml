@model List<Hiring>
@{
    ViewData["Title"] = "Job Applications";
    Layout = "_Admin_Dashboard_Layout";
}


<section class="relative py-20 px-8 lg:px-16 overflow-hidden">
    <!-- Background Glows -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <!-- Background Text -->
    <div class="absolute inset-0 z-0 flex flex-col items-center justify-center pointer-events-none select-none">
        <h2 class="text-[8rem] lg:text-[15rem] font-anton leading-none tracking-tighter opacity-5 uppercase text-transparent text-stroke">
            APPLICATIONS
        </h2>
        <h2 class="text-[8rem] lg:text-[15rem] font-anton leading-none tracking-tighter opacity-10 uppercase -mt-10 lg:-mt-20">
            REVIEW
        </h2>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-1.5 text-xs font-medium mb-4">
                <div class="h-2 w-2 rounded-full bg-blue-500 shadow-[0_0_8px_rgba(59,130,246,0.8)]"></div>
                Human Resources Management
            </div>
            <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tighter mb-4">
                JOB <span class="text-blue-600">APPLICATIONS</span>
            </h1>
            <p class="text-gray-400 max-w-2xl mx-auto text-lg">Review and manage all incoming job applications. Click any row to view full details.</p>
        </div>

        <!-- Message Alert -->
        @if (TempData["Message"] != null)
        {
            <div class="mb-8 p-6 bg-blue-900/30 border border-blue-500/30 rounded-2xl text-blue-300">
                <div class="flex items-center gap-3">
                    <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-lg">@TempData["Message"]</span>
                </div>
            </div>
        }

        <!-- Applications Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 lg:p-8 rounded-[2.5rem] shadow-2xl">
            @if (Model.Any())
            {
                <!-- Search and Filter Controls -->
                <div class="mb-6 flex flex-col md:flex-row gap-4 justify-between">
                    <div class="relative flex-1">
                        <input type="text" id="searchInput"
                               placeholder="Search applications..."
                               class="w-full bg-black/40 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white placeholder:text-gray-600 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all">
                        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                    <select id="statusFilter" class="bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all">
                        <option value="all">All Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Hired">Hired</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead>
                            <tr class="text-gray-500 uppercase tracking-[0.2em] text-xs font-black">
                                <th class="px-6 py-4 cursor-pointer" onclick="sortTable(0)">Name</th>
                                <th class="px-6 py-4 cursor-pointer" onclick="sortTable(1)">Qualification</th>
                                <th class="px-6 py-4 cursor-pointer" onclick="sortTable(2)">Applied For</th>
                                <th class="px-6 py-4 cursor-pointer" onclick="sortTable(3)">Status</th>
                                <th class="px-6 py-4 cursor-pointer" onclick="sortTable(4)">Applied On</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="applicationsTableBody" class="divide-y divide-white/10">
                            @foreach (var app in Model)
                            {
                                <tr class="group hover:bg-white/5 transition-colors duration-300 cursor-pointer application-row"
                                    data-app-id="@app.Id"
                                    data-app-name="@app.Name"
                                    data-app-email="@app.Email"
                                    data-app-contact="@app.Contact"
                                    data-app-address="@app.Address"
                                    data-app-qualification="@app.Qualification?.Degree"
                                    data-app-vacancy="@app.Vacancy?.Service?.Title"
                                    data-app-openings="@app.Vacancy?.Count"
                                    data-app-status="@app.Status"
                                    data-app-created="@app.CreatedAt.ToString("dd-MM-yyyy")"
                                    data-app-actions='@(app.Status == "Pending" ? "true" : "false")'>
                                    <td class="px-6 py-5">
                                        <div class="flex items-center gap-3">
                                            <div class="w-10 h-10 rounded-full bg-blue-600/20 flex items-center justify-center">
                                                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                            </div>
                                            <div>
                                                <span class="font-bold block">@app.Name</span>
                                                <span class="text-xs text-gray-400">Click for details</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                                            </svg>
                                            <span class="text-sm">@app.Qualification?.Degree</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="space-y-1">
                                            <span class="font-semibold">@app.Vacancy?.Service?.Title</span>
                                            <div class="text-xs text-blue-500 font-bold uppercase tracking-wider">
                                                Openings: @app.Vacancy?.Count
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5">
                                        @if (app.Status == "Pending")
                                        {
                                            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-yellow-900/30 border border-yellow-500/30">
                                                <div class="h-2 w-2 rounded-full bg-yellow-500"></div>
                                                <span class="text-xs font-bold uppercase tracking-wider text-yellow-300">Pending</span>
                                            </div>
                                        }
                                        else if (app.Status == "Hired")
                                        {
                                            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-green-900/30 border border-green-500/30">
                                                <div class="h-2 w-2 rounded-full bg-green-500"></div>
                                                <span class="text-xs font-bold uppercase tracking-wider text-green-300">Hired</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-900/30 border border-red-500/30">
                                                <div class="h-2 w-2 rounded-full bg-red-500"></div>
                                                <span class="text-xs font-bold uppercase tracking-wider text-red-300">Rejected</span>
                                            </div>
                                        }
                                    </td>
                                    <td class="px-6 py-5">
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            <span class="text-sm font-medium">@app.CreatedAt.ToString("dd-MM-yyyy")</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-5 text-right">
                                        @if (app.Status == "Pending")
                                        {
                                            <div class="flex justify-end gap-2">
                                                <form method="post" asp-action="Hire" asp-route-id="@app.Id" class="inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="px-4 py-2 bg-green-900/30 border border-green-500/30 rounded-xl text-green-300 text-sm font-bold uppercase tracking-wider hover:bg-green-700 hover:border-green-400 transition-colors duration-300 flex items-center gap-2 group">
                                                        <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                        </svg>
                                                        Hire
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="Reject" asp-route-id="@app.Id" class="inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="px-4 py-2 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300 text-sm font-bold uppercase tracking-wider hover:bg-red-700 hover:border-red-400 transition-colors duration-300 flex items-center gap-2 group">
                                                        <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                                                        </svg>
                                                        Reject
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500 text-sm italic">— Decision Made —</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                <div class="mt-6 flex justify-between items-center">
                    <div class="text-sm text-gray-400" id="recordCount">
                        Showing @Model.Count applications
                    </div>
                    <div class="flex gap-2" id="paginationControls">
                        <!-- Pagination will be generated by JavaScript -->
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 mx-auto rounded-full bg-white/5 flex items-center justify-center mb-6">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-300 mb-2">No Applications Yet</h3>
                    <p class="text-gray-400">No job applications have been submitted yet.</p>
                </div>
            }
        </div>
    </div>
</section>

