<script>
    // Pagination and filtering variables
    let currentPage = 1;
    let rowsPerPage = 10;
    let currentFilter = 'all';
    let currentSearch = '';
    let currentSort = { column: 0, direction: 'asc' };

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Initializing application page...');
        setupEventListeners();
        updateTableDisplay();
    });

    function setupEventListeners() {
        console.log('Setting up event listeners...');

        // Search input
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                currentSearch = e.target.value.toLowerCase();
                currentPage = 1;
                updateTableDisplay();
            });
        }

        // Status filter
        const statusFilter = document.getElementById('statusFilter');
        if (statusFilter) {
            statusFilter.addEventListener('change', function(e) {
                currentFilter = e.target.value;
                currentPage = 1;
                updateTableDisplay();
            });
        }

        // Table row click for modal
        const tableBody = document.getElementById('applicationsTableBody');
        if (tableBody) {
            console.log('Found table body with', document.querySelectorAll('.application-row').length, 'rows');

            tableBody.addEventListener('click', function(e) {
                console.log('Table body clicked');
                const row = e.target.closest('.application-row');
                console.log('Clicked row:', row);

                if (row && !e.target.closest('form') && !e.target.closest('button')) {
                    console.log('Opening modal for row');
                    openModal(row);
                }
            });
        } else {
            console.error('Could not find table body!');
        }

        // Close modal on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    }

       function openModal(row) {
        console.log('Opening modal...');

        if (!row) {
            console.error('No row provided to openModal');
            return;
        }

        const appId = row.dataset.appId;
        const appName = row.dataset.appName;
        const appEmail = row.dataset.appEmail;
        const appContact = row.dataset.appContact;
        const appAddress = row.dataset.appAddress;
        const appQualification = row.dataset.appQualification;
        const appVacancy = row.dataset.appVacancy;
        const appOpenings = row.dataset.appOpenings;
        const appStatus = row.dataset.appStatus;
        const appCreated = row.dataset.appCreated;
        const showActions = row.dataset.appActions === 'true';

        // Fill modal with data
        document.getElementById('modalName').textContent = appName;
        document.getElementById('modalEmail').textContent = appEmail;
        document.getElementById('modalEmail').href = `mailto:${appEmail}`;
        document.getElementById('modalContact').textContent = appContact || 'Not provided';
        document.getElementById('modalContact').href = appContact ? `tel:${appContact}` : '#';
        document.getElementById('modalAddress').textContent = appAddress || 'Not provided';
        document.getElementById('modalQualification').textContent = appQualification || 'Not specified';
        document.getElementById('modalVacancy').textContent = appVacancy;
        document.getElementById('modalOpenings').textContent = appOpenings;
        document.getElementById('modalCreated').textContent = appCreated;

        // Set status badge
        let statusHtml = '';
        if (appStatus === 'Pending') {
            statusHtml = '<div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-yellow-900/30 border border-yellow-500/30">' +
                '<div class="h-2 w-2 rounded-full bg-yellow-500"></div>' +
                '<span class="text-xs font-bold uppercase tracking-wider text-yellow-300">Pending</span>' +
                '</div>';
        } else if (appStatus === 'Hired') {
            statusHtml = '<div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-green-900/30 border border-green-500/30">' +
                '<div class="h-2 w-2 rounded-full bg-green-500"></div>' +
                '<span class="text-xs font-bold uppercase tracking-wider text-green-300">Hired</span>' +
                '</div>';
        } else {
            statusHtml = '<div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-900/30 border border-red-500/30">' +
                '<div class="h-2 w-2 rounded-full bg-red-500"></div>' +
                '<span class="text-xs font-bold uppercase tracking-wider text-red-300">Rejected</span>' +
                '</div>';
        }
        document.getElementById('modalStatus').innerHTML = statusHtml;

        // Set action buttons
        const actionsContainer = document.getElementById('modalActions');
        if (showActions) {
            actionsContainer.innerHTML = `
                <form method="post" action="/Hiring/Hire/${appId}" class="inline">
                    <input type="hidden" name="__RequestVerificationToken" value="${getAntiForgeryToken()}">
                    <button type="submit" class="px-6 py-3 bg-green-900/30 border border-green-500/30 rounded-xl text-green-300 text-sm font-bold uppercase tracking-wider hover:bg-green-700 hover:border-green-400 transition-colors duration-300 flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Hire
                    </button>
                </form>
                <form method="post" action="/Hiring/Reject/${appId}" class="inline">
                    <input type="hidden" name="__RequestVerificationToken" value="${getAntiForgeryToken()}">
                    <button type="submit" class="px-6 py-3 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300 text-sm font-bold uppercase tracking-wider hover:bg-red-700 hover:border-red-400 transition-colors duration-300 flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        Reject
                    </button>
                </form>`;
        } else {
            actionsContainer.innerHTML = '<span class="text-gray-500 text-sm italic">— Decision Already Made —</span>';
        }

        // Show modal with animation
        const modal = document.getElementById('applicationModal');
        modal.classList.remove('hidden');

        // Force reflow to ensure animation works
        void modal.offsetWidth;

        modal.classList.add('show');
        document.body.classList.add('modal-open');

        // Animate modal content
        const modalContent = modal.querySelector('.fixed.inset-0.flex > div');
        modalContent.classList.remove('scale-95');
        modalContent.classList.add('scale-100');
    }

    function closeModal() {
        const modal = document.getElementById('applicationModal');
        const modalContent = modal.querySelector('.fixed.inset-0.flex > div');

        // Animate modal content out
        modalContent.classList.remove('scale-100');
        modalContent.classList.add('scale-95');

        // Remove show class after animation
        setTimeout(() => {
            modal.classList.remove('show');
            modal.classList.add('hidden');
            document.body.classList.remove('modal-open');
        }, 300);
    }

    function sortTable(columnIndex) {
        if (currentSort.column === columnIndex) {
            currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
        } else {
            currentSort.column = columnIndex;
            currentSort.direction = 'asc';
        }
        updateTableDisplay();
    }

    function updateTableDisplay() {
        const rows = document.querySelectorAll('.application-row');
        const filteredRows = Array.from(rows).filter(row => {
            // Apply search filter
            if (currentSearch) {
                const rowText = row.textContent.toLowerCase();
                if (!rowText.includes(currentSearch)) {
                    return false;
                }
            }

            // Apply status filter
            if (currentFilter !== 'all') {
                const status = row.dataset.appStatus;
                if (status !== currentFilter) {
                    return false;
                }
            }

            return true;
        });

        // Sort rows
        filteredRows.sort((a, b) => {
            let aValue, bValue;

            switch (currentSort.column) {
                case 0: // Name
                    aValue = a.dataset.appName.toLowerCase();
                    bValue = b.dataset.appName.toLowerCase();
                    break;
                case 1: // Qualification
                    aValue = a.dataset.appQualification?.toLowerCase() || '';
                    bValue = b.dataset.appQualification?.toLowerCase() || '';
                    break;
                case 2: // Applied For
                    aValue = a.dataset.appVacancy?.toLowerCase() || '';
                    bValue = b.dataset.appVacancy?.toLowerCase() || '';
                    break;
                case 3: // Status
                    aValue = a.dataset.appStatus.toLowerCase();
                    bValue = b.dataset.appStatus.toLowerCase();
                    break;
                case 4: // Applied On
                    aValue = a.dataset.appCreated;
                    bValue = b.dataset.appCreated;
                    break;
                default:
                    aValue = a.dataset.appName.toLowerCase();
                    bValue = b.dataset.appName.toLowerCase();
            }

            if (currentSort.direction === 'asc') {
                return aValue > bValue ? 1 : -1;
            } else {
                return aValue < bValue ? 1 : -1;
            }
        });

        // Hide all rows first
        rows.forEach(row => row.style.display = 'none');

        // Calculate pagination
        const startIndex = (currentPage - 1) * rowsPerPage;
        const endIndex = startIndex + rowsPerPage;
        const paginatedRows = filteredRows.slice(startIndex, endIndex);

        // Show filtered and paginated rows
        paginatedRows.forEach(row => row.style.display = '');

        // Update record count
        const recordCount = document.getElementById('recordCount');
        if (recordCount) {
            recordCount.textContent = `Showing ${filteredRows.length} applications (${startIndex + 1}-${Math.min(endIndex, filteredRows.length)} displayed)`;
        }

        // Update pagination controls
        updatePaginationControls(filteredRows.length);
    }

    function updatePaginationControls(totalRows) {
        const totalPages = Math.ceil(totalRows / rowsPerPage);
        const paginationContainer = document.getElementById('paginationControls');

        if (totalPages <= 1) {
            paginationContainer.innerHTML = '';
            return;
        }

        let html = '';

        // Previous button
        html += `<button onclick="changePage(${currentPage - 1})" ${currentPage === 1 ? 'disabled' : ''}
                 class="pagination-btn ${currentPage === 1 ? 'opacity-50 cursor-not-allowed' : ''}">Previous</button>`;

        // Page numbers
        for (let i = 1; i <= totalPages; i++) {
            if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) {
                html += `<button onclick="changePage(${i})"
                         class="pagination-btn ${i === currentPage ? 'active' : ''}">${i}</button>`;
            } else if (i === currentPage - 3 || i === currentPage + 3) {
                html += `<span class="px-2">...</span>`;
            }
        }

        // Next button
        html += `<button onclick="changePage(${currentPage + 1})" ${currentPage === totalPages ? 'disabled' : ''}
                 class="pagination-btn ${currentPage === totalPages ? 'opacity-50 cursor-not-allowed' : ''}">Next</button>`;

        paginationContainer.innerHTML = html;
    }

    function changePage(page) {
        currentPage = page;
        updateTableDisplay();
        // Scroll to top of table
        document.querySelector('.overflow-x-auto').scrollIntoView({ behavior: 'smooth' });
    }

    function getAntiForgeryToken() {
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        return tokenInput ? tokenInput.value : '';
    }
</script>