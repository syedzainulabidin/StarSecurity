@model Vacancy
@{
    ViewData["Title"] = "Edit Vacancy";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-3xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl font-anton uppercase tracking-tight text-yellow-600">
                EDIT <span class="text-white">VACANCY</span>
            </h1>
            <p class="text-gray-400 mt-4">
                Update job opening details
            </p>
        </div>

        <!-- Validation Errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 p-4 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300">
                <ul class="list-disc pl-5">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Form -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-8 rounded-[2rem] shadow-2xl">
            <form method="post" asp-controller="Vacancy" asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Service -->
                <div class="mb-6">
                    <label asp-for="ServiceId" class="block text-gray-300 font-bold mb-2">Service</label>
                    <select asp-for="ServiceId" asp-items="ViewBag.Services"
                            class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white"
                            required>
                        <option value="">-- Select Service --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Number of Openings -->
                <div class="mb-6">
                    <label asp-for="Count" class="block text-gray-300 font-bold mb-2">Number of Openings</label>
                    <input asp-for="Count" type="number" min="1"
                           class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white"
                           required />
                    <span asp-validation-for="Count" class="text-red-500 text-sm"></span>
                </div>

                <!-- Status -->
                <div class="mb-6">
                    <label asp-for="Status" class="block text-gray-300 font-bold mb-2">Status</label>
                    <select asp-for="Status"
                            class="w-full bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white">
                        <option value="Open" selected="@Model.Status == " Open"">Open</option>
                        <option value="Closed" selected="@Model.Status == " Closed"">Closed</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="flex justify-end gap-4 mt-8">
                    <button type="submit"
                            class="px-6 py-3 bg-yellow-600 hover:bg-yellow-700 rounded-xl font-bold text-black uppercase">
                        Update Vacancy
                    </button>
                    <a asp-action="Index"
                       class="px-6 py-3 bg-gray-700 hover:bg-gray-600 rounded-xl font-bold text-white uppercase">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>
