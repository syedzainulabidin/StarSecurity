@{
    ViewData["Title"] = "Employee Dashboard";
}

<h1>Employee Dashboard</h1>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">My Bookings</h5>
                <a href="/Bookings" class="text-white">View Assignments</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">My Profile</h5>
                <a href="/Employees/Details/@Context.Session.GetInt32("UserId")" class="text-white">View Profile</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">View Colleagues</h5>
                <a href="/Employees" class="text-white">View All Employees</a>
            </div>
        </div>
    </div>
</div>