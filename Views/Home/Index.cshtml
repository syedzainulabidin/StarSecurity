                    <!-- Play Button -->
                    <div class="absolute inset-0 flex items-center justify-center">
                        <button class="w-20 h-20 rounded-full bg-blue-600 flex items-center justify-center shadow-lg shadow-blue-600/40 transition-transform duration-300 hover:scale-110">
