@{
    ViewData["Title"] = "Our Network";
}

<header class="relative pt-20 pb-12 px-8 lg:px-16 text-center overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full pointer-events-none select-none -z-10 opacity-10">
        <h2 class="text-[10rem] lg:text-[15rem] font-anton uppercase tracking-tighter text-transparent text-stroke leading-none">NETWORK</h2>
    </div>
    <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tighter mb-4">OUR BRANCHES <span class="text-blue-600">ACROSS INDIA</span></h1>
    <p class="text-gray-400 max-w-2xl mx-auto text-lg uppercase tracking-widest font-medium">Strategic presence to ensure your safety wherever you are.</p>
</header>

<!-- Regions Grid -->
<main class="relative z-10 max-w-7xl mx-auto px-8 lg:px-16 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- North Region -->
        <div class="branch-card group p-10 rounded-[2.5rem] border border-white/5 bg-white/5 transition-all duration-500 flex flex-col justify-between min-h-[300px]">
            <div>
                <div class="flex justify-between items-start mb-6">
                    <h3 class="text-4xl font-anton uppercase tracking-tighter group-hover:text-blue-500 transition-colors">NORTH REGION</h3>
                    <svg class="w-8 h-8 text-blue-600 opacity-50 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                </div>
                <p class="text-gray-400 font-medium mb-6">Our strategic hubs in North India providing security services to the capital region and surrounding areas.</p>
                <div class="flex flex-wrap gap-4 mt-4">
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">DELHI</div>
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">CHANDIGARH</div>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-white/5">
                <p class="text-blue-500 font-bold uppercase tracking-widest text-sm">Regional Hubs</p>
            </div>
        </div>

        <!-- West Region -->
        <div class="branch-card group p-10 rounded-[2.5rem] border border-white/5 bg-white/5 transition-all duration-500 flex flex-col justify-between min-h-[300px]">
            <div>
                <div class="flex justify-between items-start mb-6">
                    <h3 class="text-4xl font-anton uppercase tracking-tighter group-hover:text-blue-500 transition-colors">WEST REGION</h3>
                    <svg class="w-8 h-8 text-blue-600 opacity-50 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                </div>
                <p class="text-gray-400 font-medium mb-6">Serving the industrial and financial heartlands of India with comprehensive security solutions.</p>
                <div class="flex flex-wrap gap-4 mt-4">
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">MUMBAI</div>
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">AHMEDABAD</div>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-white/5">
                <p class="text-blue-500 font-bold uppercase tracking-widest text-sm">Industrial Powerhouses</p>
            </div>
        </div>

        <!-- East Region -->
        <div class="branch-card group p-10 rounded-[2.5rem] border border-white/5 bg-white/5 transition-all duration-500 flex flex-col justify-between min-h-[300px]">
            <div>
                <div class="flex justify-between items-start mb-6">
                    <h3 class="text-4xl font-anton uppercase tracking-tighter group-hover:text-blue-500 transition-colors">EAST REGION</h3>
                    <svg class="w-8 h-8 text-blue-600 opacity-50 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                </div>
                <p class="text-gray-400 font-medium mb-6">Providing security services to the eastern states with focus on commercial and residential protection.</p>
                <div class="flex flex-wrap gap-4 mt-4">
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">KOLKATA</div>
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">BHUBANESWAR</div>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-white/5">
                <p class="text-blue-500 font-bold uppercase tracking-widest text-sm">Strategic East Outposts</p>
            </div>
        </div>

        <!-- South Region -->
        <div class="branch-card group p-10 rounded-[2.5rem] border border-white/5 bg-white/5 transition-all duration-500 flex flex-col justify-between min-h-[300px]">
            <div>
                <div class="flex justify-between items-start mb-6">
                    <h3 class="text-4xl font-anton uppercase tracking-tighter group-hover:text-blue-500 transition-colors">SOUTH REGION</h3>
                    <svg class="w-8 h-8 text-blue-600 opacity-50 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2v20M2 12h20" />
                    </svg>
                </div>
                <p class="text-gray-400 font-medium mb-6">Serving the tech hubs and coastal regions with specialized security and surveillance solutions.</p>
                <div class="flex flex-wrap gap-4 mt-4">
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">CHENNAI</div>
                    <div class="city-tag px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-xl font-bold transition-all duration-300 cursor-default hover:border-blue-500 hover:bg-blue-600/20">BANGALORE</div>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-white/5">
                <p class="text-blue-500 font-bold uppercase tracking-widest text-sm">Tech & Coastal Security</p>
            </div>
        </div>

    </div>
</main>

<!-- Contact CTA -->
<section class="max-w-7xl mx-auto px-8 lg:px-16 pb-32">
    <div class="relative bg-blue-600 rounded-[3rem] p-12 lg:p-20 overflow-hidden group">
        <div class="absolute top-0 right-0 p-8 opacity-20">
            <svg class="w-64 h-64 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
            </svg>
        </div>
        <div class="relative z-10 flex flex-col lg:flex-row justify-between items-center gap-12">
            <div class="text-center lg:text-left">
                <h2 class="text-5xl lg:text-7xl font-anton uppercase tracking-tighter mb-6">LOCAL INQUIRIES?</h2>
                <p class="text-white/80 text-xl font-bold uppercase tracking-widest">Contact each branch for specific regional security solutions.</p>
            </div>
            <a href="/contact" class="bg-white text-blue-600 px-12 py-5 rounded-2xl text-xl font-black uppercase tracking-tighter hover:bg-[#020617] hover:text-white transition-all duration-300 shadow-xl shadow-black/20">
                CONTACT US NOW
            </a>
        </div>
    </div>
</section>

<style>
    .text-stroke {
        -webkit-text-stroke: 1px rgba(255, 255, 255, 0.3);
    }

    .branch-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        background: rgba(255, 255, 255, 0.08);
    }

    .city-tag:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(37, 99, 235, 0.2);
    }

    .group:hover .group-hover\:text-blue-500 {
        color: #3b82f6;
    }

    .group:hover .group-hover\:opacity-100 {
        opacity: 1;
    }
</style>