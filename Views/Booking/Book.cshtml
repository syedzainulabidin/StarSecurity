@model Booking
@{
    ViewData["Title"] = "Book Security Service";
}

<h2>Book @ViewBag.ServiceTitle</h2>
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form method="post" action="/booking/book">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ServiceId" value="@ViewBag.ServiceId" />

    <div class="form-group">
        <label asp-for="ClientName">Your Name</label>
        <input asp-for="ClientName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ClientEmail">Email</label>
        <input asp-for="ClientEmail" type="email" class="form-control" required />
        <span asp-validation-for="ClientEmail" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Date">Service Date</label>
        <input asp-for="Date" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="row">
        <div class="col">
            <label asp-for="ShiftStart">Shift Start Time</label>
            <input asp-for="ShiftStart" type="time" class="form-control" required />
        </div>
        <div class="col">
            <label asp-for="ShiftEnd">Shift End Time</label>
            <input asp-for="ShiftEnd" type="time" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address">Service Address</label>
        <textarea asp-for="Address" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Description">Additional Details</label>
        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit Booking Request</button>
</form>