@model List<Client>
@{
    ViewData["Title"] = "Clients";
    Layout = "_Admin_Dashboard_Layout";
}

<section class="relative py-20 px-8 lg:px-16 overflow-hidden">

    <!-- Background -->
    <div class="absolute top-[-10%] left-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/20 blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] h-[600px] w-[600px] rounded-full bg-blue-900/10 blur-[120px]"></div>

    <div class="relative z-10 max-w-7xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-5xl lg:text-7xl font-anton uppercase tracking-tight text-yellow-600">
                CLIENT <span class="text-white">MANAGEMENT</span>
            </h1>
            <p class="text-gray-400 mt-4">
                View and manage all clients
            </p>
        </div>

        <!-- Alert -->
        @if (TempData["Message"] != null)
        {
            <div class="mb-6 p-4 bg-blue-900/30 border border-blue-500/30 rounded-xl text-blue-300">
                @TempData["Message"]
            </div>
        }

        <!-- Controls -->
        <div class="mb-6 flex justify-end gap-4">
            <input id="searchInput"
                   placeholder="Search clients..."
                   class="w-full md:w-1/3 bg-black/40 border border-white/10 rounded-xl px-4 py-3 text-white" />

            <a asp-action="Create"
               class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-bold uppercase text-sm">
                + Add New Client
            </a>
        </div>

        <!-- Table -->
        <div class="bg-white/5 backdrop-blur-xl border border-white/10 p-6 rounded-[2.5rem] shadow-2xl overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="text-gray-500 uppercase tracking-widest text-xs">
                        <th class="px-6 py-4">Client Name</th>
                        <th class="px-6 py-4">Service Availed</th>
                        <th class="px-6 py-4">Booking Date</th>
                        <th class="px-6 py-4">Added On</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/10">
                    @foreach (var client in Model)
                    {
                        <tr class="hover:bg-white/5 transition cursor-pointer"
                            onclick="openClientModal(this)"
                            data-clientname="@Html.Raw(client.Booking?.ClientName)"
                            data-bookingdate="@Html.Raw(client.Booking?.Date.ToString("dd-MM-yyyy HH:mm"))"
                            data-employee="@(client.Booking?.Employee != null ? client.Booking.Employee.Name : "Private")"
                            data-servicetitle="@Html.Raw(client.Booking?.Service?.Title)"
                            data-servicedesc="@Html.Raw(client.Booking?.Service?.Description)">
                            <td class="px-6 py-5 font-bold">@client.Booking?.ClientName</td>
                            <td class="px-6 py-5">@client.Booking?.Service?.Title</td>
                            <td class="px-6 py-5">@client.Booking?.Date.ToString("dd-MM-yyyy")</td>
                            <td class="px-6 py-5">@client.CreatedAt.ToString("dd-MM-yyyy")</td>
                            <td class="px-6 py-5 text-right">
                                <button onclick="event.stopPropagation(); openDeleteModal(@client.Id, '@client.Booking?.ClientName')"
                                        class="px-4 py-2 bg-red-900/30 border border-red-500/30 rounded-xl text-red-300 text-sm font-bold uppercase">
                                    Remove
                                </button>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            <!-- Pagination & Record Count -->
            <div class="mt-6 flex justify-between items-center">
                <div id="recordCount" class="text-sm text-gray-400"></div>
                <div id="paginationControls" class="flex gap-2"></div>
            </div>
        </div>
    </div>
</section>

<!-- CLIENT DETAILS MODAL -->
<div id="clientModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeClientModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-lg p-6">
            <h3 class="text-3xl font-anton uppercase mb-4 text-yellow-400">
                Client Details
            </h3>

            <div id="clientModalBody" class="text-gray-300 space-y-2">
                <!-- JS will populate this -->
            </div>

            <div class="mt-6 flex justify-end">
                <button onclick="closeClientModal()" class="px-6 py-2 border border-white/10 rounded-xl">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- DELETE CONFIRMATION MODAL -->
<div id="deleteModal" class="fixed inset-0 hidden z-[9999]">
    <div class="fixed inset-0 bg-black/80 backdrop-blur" onclick="closeDeleteModal()"></div>

    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#020617] border border-white/10 rounded-[2rem] w-full max-w-md p-6">
            <h3 class="text-2xl font-anton uppercase mb-4 text-red-400">Confirm Deletion</h3>

            <p class="text-gray-300 mb-6">
                Are you sure you want to remove <strong id="deleteClientName"></strong>?
            </p>

            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeDeleteModal()" class="px-5 py-2 border border-white/10 rounded-xl">
                        Cancel
                    </button>
                    <button type="submit" class="px-5 py-2 bg-red-900/40 border border-red-500/40 rounded-xl text-red-300 font-bold uppercase">
                        Remove
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const rowsPerPage = 5;
    let searchValue = '';

    // SEARCH & PAGINATION
    document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('searchInput')?.addEventListener('input', e => {
            searchValue = e.target.value.toLowerCase();
            currentPage = 1;
            updateTable();
        });
        updateTable();
    });

    function updateTable() {
        const rows = Array.from(document.querySelectorAll('tbody tr'));
        const filtered = rows.filter(r =>
            r.dataset.clientname.toLowerCase().includes(searchValue)
        );

        rows.forEach(r => r.style.display = 'none');

        filtered.slice((currentPage - 1) * rowsPerPage, currentPage * rowsPerPage)
            .forEach(r => r.style.display = '');

        document.getElementById('recordCount').textContent =
            `Showing ${filtered.length} clients`;

        buildPagination(filtered.length);
    }

    function buildPagination(total) {
        const pages = Math.ceil(total / rowsPerPage);
        const container = document.getElementById('paginationControls');
        container.innerHTML = '';

        for (let i = 1; i <= pages; i++) {
            container.innerHTML += `
                <button onclick="changePage(${i})"
                        class="px-3 py-1 rounded-lg ${i === currentPage ? 'bg-yellow-600' : 'bg-white/10'}">
                    ${i}
                </button>`;
        }
    }

    function changePage(p) {
        currentPage = p;
        updateTable();
    }

    // CLIENT DETAILS MODAL
    function openClientModal(row) {
        const body = `
            <p><strong>Client Name:</strong> ${row.dataset.clientname}</p>
            <p><strong>Booking Date:</strong> ${row.dataset.bookingdate}</p>
            <p><strong>Employee Assigned:</strong> ${row.dataset.employee}</p>
            <p><strong>Service Availed:</strong> ${row.dataset.servicetitle}</p>
            <p><strong>About Service:</strong> ${row.dataset.servicedesc}</p>
        `;
        document.getElementById('clientModalBody').innerHTML = body;
        document.getElementById('clientModal').classList.remove('hidden');
    }

    function closeClientModal() {
        document.getElementById('clientModal').classList.add('hidden');
    }

    // DELETE MODAL
    function openDeleteModal(id, name) {
        document.getElementById('deleteClientName').textContent = name;
        document.getElementById('deleteForm').action = `/dashboard/clients/delete/${id}`;
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>
